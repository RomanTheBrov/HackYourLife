<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.90"
    android:backgroundTint="@color/color_accent"
    android:backgroundTintMode="multiply"
    tools:context="com.bif812.roman.hackyourlife.MainActivity"
    android:orientation="vertical"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false"
    android:gravity="center"
    android:background="@drawable/snp_background">
    <!--android:background="@mipmap/h"-->


        <!--android:background="@mipmap/c"-->

        <Button
            android:id="@+id/startServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#f4051802"
            android:text="Start Service"
            android:textColor="#e3d309d7"
            android:textColorHint="#ffffff" />


        <TextView
            android:id="@+id/stepsCounted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:text="Count Steps"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f5ac25e6" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/stepsDetected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Detect Steps"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ef2d8e" />


        <Button
            android:id="@+id/stopServiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f4021715"
            android:text="Stop Service"
            android:textColor="#f0dd2075" />


    <!-- Animation Custom View -->

</LinearLayout>
